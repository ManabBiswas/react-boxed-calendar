{
  "name": "react-boxed-calendar",
  "version": "1.0.0",
  "description": "A highly customizable, flexible React calendar component with single and range date selection modes, built with TypeScript and Tailwind CSS",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./style.css": "./dist/index.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.lib.json && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "react",
    "calendar",
    "date-picker",
    "datepicker",
    "date-range",
    "tailwind",
    "typescript",
    "react-component",
    "ui-component"
  ],
  "author": "Durgeshwar-AI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Durgeshwar-AI/react-boxed-calendar.git"
  },
  "bugs": {
    "url": "https://github.com/Durgeshwar-AI/react-boxed-calendar/issues"
  },
  "homepage": "https://github.com/Durgeshwar-AI/react-boxed-calendar#readme",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "tailwindcss": ">=3.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/vite": "^4.1.17",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.1.17",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vite-plugin-lib-inject-css": "^2.2.2"
  }
}
